# Travel Buddy API - Production Environment Variables
# Use this template for production deployments

# ===== APPLICATION =====
APP_ENVIRONMENT=production
APP_HOST=0.0.0.0
APP_PORT=8000

# ===== DATABASE =====
# Use PostgreSQL or other production database
DATABASE_URL=postgresql://user:password@db-host:5432/travel_buddy

# ===== LOGGING =====
LOG_LEVEL=warning
LOG_FILE=logs/travel_buddy.log

# ===== API LIMITS =====
MAX_TRAVELERS=20
MAX_TRIP_DAYS=365

# ===== PRICING DEFAULTS =====
DEFAULT_ACCOMMODATION_PER_NIGHT=100
DEFAULT_FOOD_PER_DAY=35
DEFAULT_MISC_PER_DAY=20

# ===== PROVIDER SETTINGS =====
PROVIDER_TIMEOUT=10

# ===== AUTH / JWT =====
# Use a strong secret in production
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXP_MINUTES=60
AUTH_COOKIE_NAME=travel_buddy_token
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=lax
