# Travel Buddy API - Environment Variables
# Copy this file to .env and update with your settings

# ===== APPLICATION =====
APP_ENVIRONMENT=development
APP_HOST=0.0.0.0
APP_PORT=8000

# ===== DATABASE =====
# SQLite (default for development)
DATABASE_URL=sqlite:///./travel.db

# PostgreSQL (example - uncomment for production)
# DATABASE_URL=postgresql://user:password@localhost/travel_buddy
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=logs/travel_buddy.log

# ===== API LIMITS =====
MAX_TRAVELERS=20
MAX_TRIP_DAYS=365
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=120
API_RATE_LIMIT_WINDOW_SECONDS=60
# Optional: comma-separated paths to protect
# API_RATE_LIMIT_PATHS=/api/v1/chat,/api/v1/chat/from-trip

# ===== PRICING DEFAULTS =====
# Used when city not found in database
DEFAULT_ACCOMMODATION_PER_NIGHT=100
DEFAULT_FOOD_PER_DAY=35
DEFAULT_MISC_PER_DAY=20

# ===== PROVIDER SETTINGS =====
PROVIDER_TIMEOUT=10

# ===== CORS SETTINGS =====
# Allowed origins for CORS (comma-separated for production)
# Default: http://localhost:3000,http://localhost:8080

# ===== AUTH / JWT =====
# Use a strong secret in production
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXP_MINUTES=60
AUTH_COOKIE_NAME=travel_buddy_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# ===== AI CHAT / LLM =====
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
LLM_TIMEOUT_SECONDS=120
LLM_MAX_TOKENS=1000
LLM_RETRY_ATTEMPTS=2
LLM_MAX_CONCURRENT_REQUESTS=2
LLM_QUEUE_WAIT_TIMEOUT_SECONDS=20
LLM_MAX_MESSAGE_CHARS=2000
LLM_MAX_CONTEXT_ITEMS=12
LLM_MAX_CONTEXT_VALUE_CHARS=256
# Optional: comma-separated allowlist for context keys
# LLM_CONTEXT_ALLOWED_KEYS=origin,destination,start_date,end_date,days,travelers,transport_type,budget,food_total,misc_total
# Optional: custom system prompt
# LLM_SYSTEM_PROMPT=You are Travel Buddy AI...